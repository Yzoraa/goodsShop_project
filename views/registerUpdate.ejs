<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- axios 사용 -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <link rel="stylesheet" href="/public/css/registerUpdate.css" />
</head>
<body>
    <div class="topBox">
        <img class="logoText" src="/img/textLogo.jpg" width="220">
        <h1>수정 페이지</h1>
    </div>
    <form name="registerUpdate" class="registerUpdate">
        <div class="content">
            <div class="text">이름</div>
            <input name="name" value="<%= getForMove.name %>"/>
        </div>
        <div class="content">
            <div class="text">설명</div>
            <input name="comment" value="<%= getForMove.comment %>"/>
        </div>
        <div class="content">
            <div class="text">가격</div>
            <input name="price" value="<%= getForMove.price %>"/>
        </div>
        <button type="button" onclick="updateForm('<%= getForMove.id %>')">수정</button>
    </form>
</body>
<script>
    const updateForm = (id) =>{
        const form = document.forms['registerUpdate'];

        const data = {
            id: id,
            name: form['name'].value,
            comment: form['comment'].value,
            price: form['price'].value
        };
        
        axios({
            method: 'put',
            url: '/register/update',
            data: data,
        }).then((res) =>{
            alert('수정성공!');
        }).catch((error) => {
            console.log(error);
        });
    }
</script>
</html> 